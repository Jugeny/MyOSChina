<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!--可以描述控件的样式-->
    <!--圆角-->
    <corners
        android:radius="15dp"
        >
    </corners>
    <!--填充色-->
    <solid
        android:color="#0fffff"></solid>
    <!--边框-->
    <stroke
        android:color="#ffffff"
        android:width="2dp"
        android:dashGap="0dp"
        android:dashWidth="100dp">
    </stroke>
    <!--渐变色-->
    <gradient
        android:type="linear"
        android:startColor="@color/colorPrimaryDark"
        android:centerColor="@color/colorWhite"
        android:endColor="@color/colorPrimary"></gradient>
</shape>